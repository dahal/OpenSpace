<% unless cart.line_items.empty? %>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
        	<h3>Proceed Booking </h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Almost there... </th>
                        <th>Months</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    <%= render(cart.line_items) %>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h6>Total</h6></td>
                        <td class="text-right"><h5><strong><%= number_to_currency(cart.total_price)  %></strong></h5></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                            <%= button_to 'Continue Shopping', {:controller=>"gallery",:action=>"index"}, :class => "btn btn-default" %>
                        </td>
                        <td>
                            <% if session[:user]%>
                            <%= form_tag carts_path do %>
                                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                                  data-description="A month's subscription"
                                  data-amount="<%= @cart.total_price*100 %>"></script>
                                  <input type="hidden" value="<%= @cart.total_price * 100%>" name="amount_to_capture">

                            <% end %>
                            <% else %>
                            <%= link_to "Login to Checkout", :controller=>"accounts",:action=>"login", :class => "btn btn-success" %>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% end -%>

