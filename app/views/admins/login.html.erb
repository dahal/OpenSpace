<!--sign in -->
<div class="col-md-3"></div>
<div class="col-md-6">
	<div class="login-form">
		<%= flash[:notice] %>
        <%= form_for :admin do |f| %>
	        <div class="form-group">
					<%= f.text_field :admin_username ,:class=>"form-control login-field" ,:placeholder => "Enter your username", :id=>"login-username" %>
					<label class="login-field-icon fui-user" for="login-name"></label>
	        </div>

	        <div class="form-group">
	          <%= f.password_field :password ,:class=>"form-control password-field" ,:placeholder => "Enter your password", :id=>"login-password" %>
	          <label class="login-field-icon fui-lock" for="login-pass"></label>
	        </div>
	        <%= f.submit "Login",:class=>"btn btn-success btn-lg btn-block", :disable_with => 'Loggin In...' %>
	        <!--<a class="btn btn-success btn-lg btn-block" href="#">Login</a>-->
	        
        <% end %>
	</div>
</div>
<div class="col-md-3"></div>
<!--ends-->
