

<% @space_gallery.each do |space|%> 
    <div class="demo-tiles">
        <div class="col-md-4">
            <div class="tile">
                <%= link_to :controller=>"gallery",:action=>"detail",:id=>space.id do %>
                    <h3 class="tile-title" style="color:black"><%= space.city %>  |  <%= space.state %></h3><br />
                    <%= image_tag space.image.url, :height=>"320",:width=>"320" %><br />
    	            <span style="color:black"><i class="fui-location"></i><%= space.address1 %>, <%= space.zipcode %></span><br />
                    <span style="color:black"><i class="fui-lock"></i>$ <%= space.price %> / Month</span><br>
                    <span style="color:black"><i class="fui-plus"></i><%= space.area %> Sq. Ft.</span><br>
                <% end %>
                <td><%= button_to 'View Details', {:controller=>"gallery",:action=>"detail",:id=>space.id}, :class=>"btn btn-danger btn-large btn-block" %></td>        
            </div><br/><br/>
        </div>
    </div>
<% end %> 
