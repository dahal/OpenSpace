        <input type="text" name = "search" class="form-control" placeholder="Find the best spot, Search by City, State or Zipcode">
        <span class="input-group-btn">
          <button class="btn btn-success" type="button">SEARCH NOW</button>
        </span>
     </div><!-- /input-group -->
</form>


<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@space_detail.latitude}%2C#{@space_detail.longitude}" %>

