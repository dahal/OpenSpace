<!--SignUp -->
<div class="col-md-3"></div>
<div class="col-md-6">
	<div class="login-form">
		<center><h3> Sign Up </h3></center>
		<%= form_for :user do |f| %>
			<%= render 'shared/error' %>
	        <div class="form-group"><!--name form-->
	        	<%= f.text_field :login_name, :class => "form-control text-field", :value=>"", :placeholder => "Enter your name", :id => "login_name" %>
	        	<label class="login-field-icon fui-user" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :login_email, :class => "form-control email-field", :value=>"", :placeholder => "Enter your email address", :id => "login_email"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--password form-->
	          <%= f.password_field :password,:class => "form-control password-field", :value=>"", :placeholder => "Enter your password", :id => "password"%>
	          <label class="login-field-icon fui-lock" for="login-name"></label>
	        </div>

	        <div class="form-group"><!--password confirmation form-->
	          <%= f.password_field :password_confirmation,:class => "form-control password-field", :value=>"", :placeholder => "Confirm your password", :id => "password_confirmation"%>
	          <label class="login-field-icon fui-lock" for="login-pass"></label>
	        </div>
			<%= f.submit "Sign Up",:class => "btn btn-success btn-lg btn-block", :disable_with => 'Signing Up...' %><!--Signup Button-->
	        <!--<a class="btn btn-success btn-lg btn-block" href="#">Sign Up</a>-->
	        <a class="login-link" href="forgot_password">Lost your password?</a>
	      <a class="login-link" href="login">Sign In</a>
	    <% end %>
	</div>
</div>
<div class="col-md-3"></div>
<!--ends-->

