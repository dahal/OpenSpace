  <div class="col-md-3"></div>
  <div class="col-md-6">
  	<div class="login-form">
        <%= form_for :user do |f| %>
          <div class="form-group">
            <%= f.password_field :password, :class => "form-control password-field", :value => "", :placeholder => "Enter your new password", :id => "login-password" %>
            <label class="login-field-icon fui-lock" for="login-password"></label>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, :class => "form-control password-field", :value => "", :placeholder => "Confirm new password", :id => "login-password" %>
            <label class="login-field-icon fui-lock" for="login-password"></label>
          </div>
          <!--<a class="btn btn-success btn-lg btn-block" href="#">Reset your Password</a>-->
          <%= f.submit "Reset your Password",:class=> "btn btn-success btn-lg btn-block", :disable_with => 'Resetting your password...' %>
          <a class="login-link" href="login">Sign In</a>
          <a class="login-link" href="signup">Sign Up</a>
        <% end %>
  	</div>
  </div>
  <div class="col-md-3"></div>
