<!--SignUp -->
<div class="col-md-3"></div>
<div class="col-md-6">
	<div class="login-form">
		<center><h3> Update Account Information</h3></center>
		<%= form_for :user do |f| %>
			
	        <div class="form-group"><!--name form-->
	        	<%= f.text_field :login_name, :class => "form-control text-field", :value=>"", :placeholder => "Enter your name", :id => "login_name" %>
	        	<label class="login-field-icon fui-user" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :login_email, :class => "form-control email-field", :value=>"", :placeholder => "Enter your email address", :id => "login_email"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :address1, :class => "form-control email-field", :value=>"", :placeholder => "123 Main Street"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :address2, :class => "form-control email-field", :value=>"", :placeholder => "Apt#, Suite# etc"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :city, :class => "form-control email-field", :value=>"", :placeholder => "City"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :State, :class => "form-control email-field", :value=>"", :placeholder => "State"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group"><!--email form-->
	          <%= f.text_field :zipcode, :class => "form-control email-field", :value=>"", :placeholder => "Zipcode"%>
	          <label class="login-field-icon fui-mail" for="name"></label>
	        </div>

	        <div class="form-group">
            <%= f.label :avatar, "Upload Avatar", :class => "h6" %><br />
            <%= f.file_field :avatar, :class => "btn btn-inverse btn-sm" %>
          </div>



			<%= f.submit "Sign Up",:class => "btn btn-success btn-lg btn-block", :disable_with => 'Signing Up...' %><!--Signup Button-->
	        <!--<a class="btn btn-success btn-lg btn-block" href="#">Sign Up</a>-->
	        <a class="login-link" href="forgot_password">Lost your password?</a>
	      <a class="login-link" href="login">Sign In</a>
	    <% end %>
	</div>
</div>
<div class="col-md-3"></div>
<!--ends-->

