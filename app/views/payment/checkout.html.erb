<div class="col-md-4"></div>
<div class="col-md-8">
    
  <form action="" method="POST" id="payment-form">

        <div class="container">
            
                <div class="col-xs-12 col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Payment Details
                            </h3>
                            
                        </div>
                        <div class="panel-body">
                            <form role="form">


                            <div class="form-group">
                                <label>
                                    NAME</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Name on Credit Card" required autofocus />
                                    <span class="input-group-addon"><span class="login-field-icon fui-user"></span></span>
                                </div>   
                            </div>

                            <div class="form-group">
                                <label for="">
                                    CARD NUMBER</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="" placeholder="Valid Card Number"
                                        />
                                    <span class="input-group-addon"><span class="login-field-icon fui-lock"></span></span>
                                </div>   
                            </div>

                            

                            <div class="row">
                                <div class="col-xs-8 col-md-8">
                                    <div class="form-group pull-left">
                                        <label for="">
                                            EXPIRY DATE</label>
                                        <div class="col-xs-6 col-lg-6">
                                            <select id="exp_month" class = "form-control">
                                                  <option value="1">Jan</option>
                                                  <option value="2">Feb</option>
                                                  <option value="3">Mar</option>
                                                  <option value="4">Apr</option>
                                                  <option value="5">May</option>
                                                  <option value="6">Jun</option>
                                                  <option value="7">Jul</option>
                                                  <option value="8">Aug</option>
                                                  <option value="9">Sep</option>
                                                  <option value="10">Oct</option>
                                                  <option value="11">Nov</option>
                                                  <option value="12">Dec</option>
                                            </select>
                                        </div>
                                        <div class="col-xs-6 col-lg-6">
                                            <select id = "exp_year" class = "form-control">
                                                  <option value="2013">2013</option>
                                                  <option value="2014">2014</option>
                                                  <option value="2015">2015</option>
                                                  <option value="2016">2016</option>
                                                  <option value="2017">2017</option>
                                                  <option value="2018">2018</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4 col-md-4 pull-right">
                                    <div class="form-group">
                                        <label for="cvCode">
                                            CVV</label>
                                        <input type="password" class="form-control" id="" placeholder="CVV" required />
                                    </div>
                                </div><br/>

                            </div>

                            <div class="row">                 
                                <div class="col-xs-5 col-md-5 pull-left">
                                    <div class="form-group">
                                        <label for="">
                                            ZIPCODE</label>
                                        <input class="form-control" placeholder="ZIPCODE" required />
                                    </div>
                                </div>

                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-group">
                                        <label for="">
                                            TYPE</label>
                                        <select class = "form-control" required>
                                            <option value="VISA">Visa</option>
                                            <option value="MASTERCARD">Master Card</option>
                                            <option value="AMERICAN EXPRESS">AMEX</option>  
                                        </select>
                                    </div>
                                </div>
                            </div>
                                <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="#"><span class="badge pull-right"><%= number_to_currency (params[:amount]) %></span> Final Payment</a>
                        </li>
                    </ul>
                    <br/>
                    <a href="#" class="btn btn-success btn-lg btn-block" role="button">Pay</a>
                            </form>
                        </div>

                    </div>
                    
                </div>
            </div>
        </form>
   
    
</div><hr/><hr/><br/>

