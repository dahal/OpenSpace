<!DOCTYPE html>
<html>
<head>
  <title>OpenSpace</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

  <body>
<!--### CONTAINER STARTS ###-->    
    <div class="container">

<!-- NAVBAR STARTS -->
        <div class="navbar navbar-inverse">
            <div class="navbar-header">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-collapse-01"></button>
            </div>            
            <div class="navbar-collapse collapse navbar-collapse">
              
              <ul class="nav navbar-nav navbar-left">
                
                <li>
                    <%= link_to "OpenSpace", root_path %>
                </li>
                
                <li>
                  <a href="#fakelink">
                    How it Works?
                    <span class="navbar-unread">?</span>
                  </a>
                  <ul>
                    <li><a href="#fakelink">How to Rent your Space</a></li>
                    <li><a href="#fakelink">How to List your Space</a></li>
                  </ul> <!-- /Sub menu -->
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
              <li><a href="#fakelink">List Space</a></li>
              <li><a href="#fakelink">Rent Space</a></li>
              <li> 
                <% if session[:user] %>
                
                  <%= link_to "Dashboard", :action => "dashboard" %>
                <% else %>
                  <%= link_to "Account", :action => "login" %>
                <% end %>
                <ul>
                  <% unless session[:user] %>
                      <li><a href="/accounts/login">Log In</a></li>
                      <li><a href="/accounts/signup">Sign Up</a></li>
                      <li><a href="/accounts/forgot_password">Forgot Password?</a></li>
                   <% else %>
                      <li><a href="/accounts/logout">Log Out</a></li>
                      <li><a href="/accounts/reset_password">Reset Password?</a></li>
                    <% end %>       
                </ul> <!-- /Sub menu -->
              </li>
              <li><%= link_to "Cart", :controller => "booking_carts", :action => "booking_carts" %></li>
              </ul>
            </div><!--/.nav -->
          </div>
<!-- NAVBAR ENDS -->
	
		<%= yield %>
    </div>
<!--### CONTAINER ENDS ###-->


  </body>
</html>