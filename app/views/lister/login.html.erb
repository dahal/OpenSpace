<div class = "container">
	<!--sign in -->
	<div class="col-md-3"></div>
	<div class="col-md-6">

		<div class="login-form">
			<center><h3>Sign In</h3></center>
			<%= flash[:notice] %>
	        <%= form_for :lister do |f| %>
		        <div class="form-group">
						<%= f.text_field :email ,:class=>"form-control login-field" ,:placeholder => "Enter your email", :id=>"login-email" %>
						<label class="login-field-icon fui-user" for="login-name"></label>
		        </div>

		        <div class="form-group">
		          <%= f.password_field :password ,:class=>"form-control password-field" ,:placeholder => "Enter your password", :id=>"login-password" %>
		          <label class="login-field-icon fui-lock" for="login-pass"></label>
		        </div>
		        <%= f.submit "Login",:class=>"btn btn-success btn-lg btn-block", :disable_with => 'Loggin In...' %>
		        <!--<a class="btn btn-success btn-lg btn-block" href="#">Login</a>-->
		        <a class="login-link" href="forgot_password">Lost your password?</a>
		        <a class="login-link" href="signup">Sign Up</a>
	        <% end %>
		</div>
	</div>
	<div class="col-md-3"></div>
	<!--ends-->
</div>