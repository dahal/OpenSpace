<tr id="current_item">
	<td class="col-sm-8 col-md-6">
	<div class="media">
	    <%= image_tag line_item.list_space.image.url, :class => "thumbnail pull-left", :height=>"72",:width=>"72" %>
	    <div class="media-body">
	        <h6 class="media-heading"><a href="#"><%= line_item.list_space.city%> | <%= line_item.list_space.state%></a></h6>
	        <span class="text-success"><strong>Amazing, its going to be yours...</strong></span>
	    </div>
	</div></td>
	<td class="col-sm-1 col-md-1" style="text-align: center">
		<strong>
			<%= line_item.month %>
			<% if line_item.month == 1 %>
				Month
			<% else %>
				Months
			<% end %>
		</strong>
	</td>
	<td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(line_item.list_space.price) %></strong></td>
	<td class="col-sm-1 col-md-1 text-center"><strong><%= number_to_currency(line_item.total_price) %></strong></td>
	<td class="col-sm-1 col-md-1">
		<%= button_to 'X Remove', @cart, :class => "btn btn-danger pull-right", :method => :delete, :confirm => 'Are you sure?' %>
	</td>
</tr>

